
@{
    ViewBag.Title = "Login";
}

<div id="sinem" class="jumbotron" style="min-height:500px">
    <div class="row">
        <div class="col-md-4 col-sm-1"></div>
        <div class="col-md-4 col-sm-10">
            <h2 style="color:white;">Login</h2>
            <form action="/Account/Login" method="post">
                <div class="form-group">
                    <label for="user" style="color:white;">Usuario</label>
                    <input type="text" style="color:white;"  class="form-control" id="user" name="user">
                </div>
                <div class="form-group">
                    <label for="pass" style="color:white;">Contraseña </label>
                    <input type="password" class="form-control" style="color:white;" id="pass" name="pass">
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
        <div class="col-md-4 col-sm-1"></div>

    </div>
 
</div>

