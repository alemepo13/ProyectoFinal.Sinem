@model IEnumerable<Sinem.Models.Vista_CursoMatriculable>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de cursos a gestionar</h2>

<p>
    @Html.ActionLink("Crear nuevo curso","Create")
</p>
<table class="table table-striped">
    <tr>
        <th>Curso</th>
        <th>Aula</th>
        <th>Horario</th>
        <th>Fecha inicio</th>
        <th>Fecha fin</th>

        <th> </th>
    </tr>
    @foreach (var i in Model)
    {
        <tr>
            <td>@i.Curso</td>
            <td>@i.Aula</td> 
            <td>@i.Horario</td>
            <td>@i.FechaInicio.ToShortDateString()</td>
            <td>@i.FechaFinal.ToShortDateString()</td>

            
            <td>
                @if (ViewBag.Asistencia)
                {
                    @Html.ActionLink("ver asistencia", "IndexAdmin", "AsistenciaEstudiante", new { id = i.idGC }, null)
                    <text>|</text>
                    @Html.ActionLink("ver detalles", "Details", new { id = i.idGC })

                }
                else
                {
                    @Html.ActionLink("editar", "Edit", new { id = i.idGC }) <text>|</text>

                    @Html.ActionLink("ver asistencia", "IndexAdmin", "AsistenciaEstudiante", new { id = i.idGC }, null) <text>|</text>

                    @Html.ActionLink("ver detalles", "Details", new { id = i.idGC }) <text>|</text>


                    @Html.ActionLink(i.estado == "activo" ? "desactivar" : "activar", "Delete", new { id = i.idGC })

                }
            </td>
        </tr>
    }

</table>

