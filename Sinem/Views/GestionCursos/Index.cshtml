@model IEnumerable<Sinem.Models.Vista_CursoMatriculable>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>Curso</th>
        <th>Aula</th>
        <th>Horario</th>
        <th>Fecha inicio</th>
        <th>Fecha fin</th>

        <th> </th>
    </tr>
    @foreach (var i in Model)
    {
        <tr>
            <td>@i.Curso</td>
            <td>@i.Aula</td> 
            <td>@i.Horario</td>
            <td>@i.FechaInicio.ToShortDateString()</td>
            <td>@i.FechaFinal.ToShortDateString()</td>

            
            <td>
                @if (ViewBag.Asistencia)
                {
                    @Html.ActionLink("Asistencia", "IndexAdmin", "AsistenciaEstudiante", new { id = i.idGC }, null)
                    <text>|</text>
                    @Html.ActionLink("Details", "Details", new { id = i.idGC })

                }
                else
                {
                    @Html.ActionLink("Edit", "Edit", new { id = i.idGC }) <text>|</text>

                    @Html.ActionLink("Asistencia", "IndexAdmin", "AsistenciaEstudiante", new { id = i.idGC }, null) <text>|</text>

                    @Html.ActionLink("Details", "Details", new { id = i.idGC }) <text>|</text>

                    @Html.ActionLink("Delete", "Delete", new { id = i.idGC })

                }
            </td>
        </tr>
    }

</table>

