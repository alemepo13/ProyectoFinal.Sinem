@model IEnumerable<Sinem.Models.Curso>

@{
    ViewBag.Title = "Index";
}

<h2>Lista general de cursos</h2>

<p>
    <img src="/Content/Plus_16px.png" />
    @Html.ActionLink("Crear nuevo curso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costo)
        </td>
        <td>
            <img src="/Content/Edit_16px.png" />
            @Html.ActionLink("Editar", "Edit", new { id = item.idCurso }) |
            <img src="/Content/Identification Documents_16px.png" />
            @Html.ActionLink("Ver detalles", "Details", new { id = item.idCurso }) |
            <img src="/Content/@(item.estado == "activo" ?"Cancel_16px.png":"Ok_16px.png")" />
            @Html.ActionLink(item.estado == "activo" ? "desactivar" : "activar", "Delete", new { id = item.idCurso })
        </td>
    </tr>
}

</table>
